<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Not pressed shutter button  -->
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <stroke
                android:color="@color/md_theme_secondary"
                android:width="5dp"/>
            <solid android:color="@color/md_theme_surfaceVariant_highContrast"/>
        </shape>
    </item>

    <!--  Pressed shutter button  -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke
                android:color="@color/md_theme_onPrimaryContainer"
                android:width="5dp"/>
            <solid android:color="@color/md_theme_outlineVariant_mediumContrast"/>
        </shape>
    </item>
</selector>